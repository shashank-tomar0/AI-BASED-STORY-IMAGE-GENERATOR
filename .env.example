# .env.example - copy to .env and fill in your real keys (do NOT commit .env with real secrets)

# Flask secret
SECRET_KEY=replace_me_with_a_secure_random_value

# Google Gemini / Imagen (optional - requires billing for image generation)
GEMINI_API_KEY=
LLM_PROVIDER=gemini
IMAGE_PROVIDER=stability

# Stability.ai (alternative image provider)
# If you prefer Stability.ai for images, set IMAGE_PROVIDER=stability and fill STABILITY_API_KEY
STABILITY_API_KEY=
STABILITY_ENGINE=stable-diffusion-xl-1024-v1-0

# Local AUTOMATIC1111 instance (if running locally)
# IMAGE_PROVIDER=local_auto
AUTOMATIC1111_URL=http://127.0.0.1:7860

# Google OAuth2 Configuration (for "Sign in with Google")
# See GOOGLE_OAUTH_SETUP.md for detailed setup instructions
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_OAUTH_REDIRECT=http://127.0.0.1:5000/api/auth/google/callback

# ===== Firebase Authentication (RECOMMENDED for production) =====
# Firebase provides easier and more secure Google sign-in
# See FIREBASE_SETUP.md for detailed setup instructions
# Get these from Firebase Console: https://console.firebase.google.com/
FIREBASE_WEB_API_KEY=
FIREBASE_PROJECT_ID=
FIREBASE_AUTH_DOMAIN=
# Service account JSON file path (relative to project root)
FIREBASE_SERVICE_ACCOUNT_PATH=firebase-service-account.json
# Or use JSON string directly (for deployment):
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account",...}

# Image cache TTL in seconds (default: 86400 = 24 hours)
IMAGE_CACHE_TTL_SECONDS=86400

# Dev fallbacks (set to False to force real provider failures to surface)
USE_MOCK_FALLBACK=False
USE_IMAGE_FALLBACK=False

# Optional: alternate image API URL if you host a different service
ALTERNATE_IMAGE_API_URL=

# For local dev quick-start without API keys, you can temporarily set:
# LLM_PROVIDER=mock
# IMAGE_PROVIDER=free
